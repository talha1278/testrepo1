{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vnetName": {
        "type": "string"
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "addressPrefixes": {
        "type": "array",
        "defaultValue": ["10.0.0.0/16"]
      },
      "subnets": {
        "type": "array",
        "metadata": {
          "description": "Array of subnets to create in the virtual network."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2021-02-01",
        "name": "[parameters('vnetName')]",
        "location": "[parameters('location')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": "[parameters('addressPrefixes')]"
          },
          "subnets": {
            "copy": [
              {
                "name": "subnetsLoop",
                "count": "[length(parameters('subnets'))]",
                "input": {
                  "name": "[parameters('subnets')[copyIndex()].name]",
                  "properties": {
                    "addressPrefix": "[parameters('subnets')[copyIndex()].properties.addressPrefix]"
                  }
                }
              }
            ]
          }
        }
      }
    ],
    "outputs": {
      "subnetIds": {
        "type": "array",
        "value": "[array(range(0, length(parameters('subnets'))), resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnets')[copyIndex()].name))]"
      }
    }
  }