{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "firewallPolicyName": { "type": "string" },
    "ruleCollectionGroupName": { "type": "string" },
    "rulesFileUri": { "type": "string" }
  },
  "resources": [
    {
      "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
      "apiVersion": "2024-01-01",
      "name": "[concat(parameters('firewallPolicyName'), '/', parameters('ruleCollectionGroupName'))]",
      "properties": {
        "priority": 300,
        "ruleCollections": "[json(loadTextContent(parameters('rulesFileUri'))).applicationRules]"
      }
    }
  ]
}
