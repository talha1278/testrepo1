{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "firewallPolicyName": { "type": "string" },
    "ruleCollectionGroupName": { "type": "string", "defaultValue": "default" },
    "firewallRuleName": { "type": "string" },
    "firewallRulePriority": { "type": "int" },
    "firewallRuleAction": { "type": "string" },
    "firewallRuleSourceAddresses": { "type": "array" },
    "firewallRuleDestinationAddresses": { "type": "array" },
    "firewallRuleDestinationPorts": { "type": "array" },
    "firewallRuleProtocol": { "type": "string" }
  },
  "resources": [
    {
      "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
      "apiVersion": "2021-08-01",
      "name": "[concat(parameters('firewallPolicyName'), '/', parameters('ruleCollectionGroupName'))]",
      "properties": {
        "priority": "[parameters('firewallRulePriority')]",
        "ruleCollections": [
          {
            "name": "[parameters('firewallRuleName')]",
            "priority": "[parameters('firewallRulePriority')]",
            "action": {
              "type": "[parameters('firewallRuleAction')]"
            },
            "rules": [
              {
                "name": "[parameters('firewallRuleName')]",
                "ruleType": "NetworkRule",
                "protocols": [ "[parameters('firewallRuleProtocol')]" ],
                "sourceAddresses": "[parameters('firewallRuleSourceAddresses')]",
                "destinationAddresses": "[parameters('firewallRuleDestinationAddresses')]",
                "destinationPorts": "[parameters('firewallRuleDestinationPorts')]"
              }
            ]
          }
        ]
      }
    }
  ]
}
