{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "firewallPolicyName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Firewall Policy"
      }
    },
    "ruleCollectionGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Rule Collection Group"
      }
    },
    "firewallRuleName": {
      "type": "string",
      "metadata": {
        "description": "Name of the firewall rule"
      }
    },
    "firewallRulePriority": {
      "type": "int",
      "metadata": {
        "description": "Priority of the firewall rule"
      }
    },
    "firewallRuleAction": {
      "type": "string",
      "allowedValues": ["Allow", "Deny"],
      "metadata": {
        "description": "Action for the firewall rule"
      }
    },
    "firewallRuleSourceAddresses": {
      "type": "array",
      "metadata": {
        "description": "Source addresses for the firewall rule"
      }
    },
    "firewallRuleDestinationAddresses": {
      "type": "array",
      "metadata": {
        "description": "Destination addresses for the firewall rule"
      }
    },
    "firewallRuleDestinationPorts": {
      "type": "array",
      "metadata": {
        "description": "Destination ports for the firewall rule"
      }
    },
    "firewallRuleProtocol": {
      "type": "array",
      "allowedValues": [["TCP"], ["UDP"], ["Any"], ["TCP", "UDP"]],
      "metadata": {
        "description": "Protocol(s) for the firewall rule. Use 'Any' or a combination of 'TCP' and 'UDP'."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('firewallPolicyName'), '/', parameters('ruleCollectionGroupName'))]",
      "properties": {
        "priority": "[parameters('firewallRulePriority')]",
        "ruleCollections": [
          {
            "name": "[parameters('firewallRuleName')]",
            "priority": "[parameters('firewallRulePriority')]",
            "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
            "action": {
              "type": "[parameters('firewallRuleAction')]"
            },
            "rules": [
              {
                "name": "[parameters('firewallRuleName')]",
                "ruleType": "NetworkRule",
                "sourceAddresses": "[parameters('firewallRuleSourceAddresses')]",
                "destinationAddresses": "[parameters('firewallRuleDestinationAddresses')]",
                "destinationPorts": "[parameters('firewallRuleDestinationPorts')]",
                "protocols": "[parameters('firewallRuleProtocol')]"
              }
            ]
          }
        ]
      }
    }
  ]
}
