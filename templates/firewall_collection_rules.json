{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "firewallPolicyName": { "type": "string" },
    "ruleCollectionGroupName": { "type": "string" },
    "firewallRuleName": { "type": "string" },
    "firewallRulePriority": { "type": "int" },
    "firewallRuleAction": {
      "type": "string",
      "allowedValues": ["Allow", "Deny"]
    },
    "ruleType": {
      "type": "string",
      "allowedValues": ["NetworkRule", "ApplicationRule"]
    },
    "firewallRuleSourceAddresses": { "type": "array", "defaultValue": [] },
    "firewallRuleDestinationAddresses": { "type": "array", "defaultValue": [] },
    "firewallRuleDestinationPorts": { "type": "array", "defaultValue": [] },
    "firewallRuleProtocol": { "type": "array", "defaultValue": [] },
    "firewallRuleFqdnTags": { "type": "array", "defaultValue": [] },
    "firewallRuleTargetFqdns": { "type": "array", "defaultValue": [] },
    "firewallRuleTargetUrls": { "type": "array", "defaultValue": [] },
    "firewallRuleHttpHeadersToInsert": { "type": "array", "defaultValue": [] }
  },
  "resources": [
    {
      "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
      "apiVersion": "2024-01-01",
      "name": "[concat(parameters('firewallPolicyName'), '/', parameters('ruleCollectionGroupName'))]",
      "properties": {
        "priority": "[parameters('firewallRulePriority')]",
        "ruleCollections": [
          {
            "name": "[parameters('firewallRuleName')]",
            "priority": "[parameters('firewallRulePriority')]",
            "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
            "action": {
              "type": "[parameters('firewallRuleAction')]"
            },
            "rules": [
              {
                "ruleType": "[parameters('ruleType')]",
                "name": "[parameters('firewallRuleName')]",
                "protocols": "[if(equals(parameters('ruleType'), 'ApplicationRule'), json('[{\"protocolType\":\"Http\",\"port\":80}]'), null)]",
                "sourceAddresses": "[parameters('firewallRuleSourceAddresses')]",
                "destinationAddresses": "[if(equals(parameters('ruleType'), 'NetworkRule'), parameters('firewallRuleDestinationAddresses'), null)]",
                "destinationPorts": "[if(equals(parameters('ruleType'), 'NetworkRule'), parameters('firewallRuleDestinationPorts'), null)]",
                "fqdnTags": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleFqdnTags'), null)]",
                "targetFqdns": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleTargetFqdns'), null)]",
                "targetUrls": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleTargetUrls'), null)]",
                "httpHeadersToInsert": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleHttpHeadersToInsert'), null)]",
                "terminateTLS": "[if(equals(parameters('ruleType'), 'ApplicationRule'), false, null)]"
              }
            ]
          }
        ]
      }
    }
  ]
}
