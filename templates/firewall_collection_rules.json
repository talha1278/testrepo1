{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "firewallPolicyName": { "type": "string" },
    "ruleCollectionGroupName": { "type": "string" },
    "firewallRuleName": { "type": "string" },
    "firewallRulePriority": { "type": "int" },
    "firewallRuleAction": { "type": "string", "allowedValues": ["Allow", "Deny"] },
    "ruleType": { "type": "string", "allowedValues": ["NetworkRule", "NatRule", "ApplicationRule"] },
    "firewallRuleSourceAddresses": { "type": "array", "defaultValue": [] },
    "firewallRuleDestinationAddresses": { "type": "array", "defaultValue": [] },
    "firewallRuleDestinationPorts": { "type": "array", "defaultValue": [] },
    "firewallRuleProtocol": { "type": "array", "defaultValue": [] },
    "firewallRuleFqdnTags": { "type": "array", "defaultValue": [] },
    "firewallRuleTargetFqdns": { "type": "array", "defaultValue": [] },
    "firewallRuleTargetUrls": { "type": "array", "defaultValue": [] },
    "firewallRuleHttpHeadersToInsert": { "type": "array", "defaultValue": [] }
  },
  "resources": [
    {
      "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
      "apiVersion": "2024-05-01",
      "name": "[concat(parameters('firewallPolicyName'), '/', parameters('ruleCollectionGroupName'))]",
      "properties": {
        "priority": "[parameters('firewallRulePriority')]",
        "ruleCollections": [
          {
            "name": "[parameters('firewallRuleName')]",
            "priority": "[parameters('firewallRulePriority')]",
            "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
            "action": {
              "type": "[parameters('firewallRuleAction')]"
            },
            "rules": [
              {
                "name": "[parameters('firewallRuleName')]",
                "ruleType": "[parameters('ruleType')]",
                "sourceAddresses": "[parameters('firewallRuleSourceAddresses')]",
                "destinationAddresses": "[if(equals(parameters('ruleType'), 'NetworkRule'), parameters('firewallRuleDestinationAddresses'), json('null'))]",
                "destinationPorts": "[if(equals(parameters('ruleType'), 'NetworkRule'), parameters('firewallRuleDestinationPorts'), json('null'))]",
                "ipProtocols": "[if(equals(parameters('ruleType'), 'NetworkRule'), parameters('firewallRuleProtocol'), json('null'))]",
                "fqdnTags": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleFqdnTags'), json('null'))]",
                "targetFqdns": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleTargetFqdns'), json('null'))]",
                "targetUrls": "[if(equals(parameters('ruleType'), 'ApplicationRule'), parameters('firewallRuleTargetUrls'), json('null'))]",
                "httpHeadersToInsert": "[if(and(equals(parameters('ruleType'), 'ApplicationRule'), not(empty(parameters('firewallRuleHttpHeadersToInsert')))), parameters('firewallRuleHttpHeadersToInsert'), json('null'))]"
              }
            ]
          }
        ]
      }
    }
  ],
  "outputs": {
    "debugRules": {
      "type": "object",
      "value": {
        "ruleName": "[parameters('firewallRuleName')]",
        "ruleType": "[parameters('ruleType')]",
        "httpHeadersToInsert": "[parameters('firewallRuleHttpHeadersToInsert')]",
        "targetUrls": "[parameters('firewallRuleTargetUrls')]"
      }
    }
  }
}
