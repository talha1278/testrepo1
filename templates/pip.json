{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "publicIPAddressName": {
        "type": "string",
        "metadata": {
          "description": "The name of the public IP address resource"
        }
      },
      "sku": {
        "type": "string",
        "defaultValue": "Basic",
        "allowedValues": [
          "Basic",
          "Standard"
        ],
        "metadata": {
          "description": "The SKU of the public IP address. See https://docs.microsoft.com/en-us/azure/virtual-network/virtual-network-ip-addresses-overview-arm for more information"
        }
      },
      "publicIPAllocationMethod": {
        "type": "string",
        "defaultValue": "Static",
        "allowedValues": [
          "Static",
          "Dynamic"
        ],
        "metadata": {
          "description": "The public IP address allocation method"
        }
      }
    },
    "resources": [
      {
        "apiVersion": "2021-02-01",
        "name": "[parameters('publicIPAddressName')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "location": "[resourceGroup().location]",
        "sku": {
          "name": "[parameters('sku')]"
        },
        "properties": {
          "publicIPAllocationMethod": "[parameters('publicIPAllocationMethod')]"
        }
      }
    ],
    "outputs": {
      "PublicIPAddress": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressName'))).ipAddress]"
      },
      "PublicIpAddressResourceId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressName'))]"
      }
    }
  }